<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <TextView
            style="@style/paragraph"
            android:text="1.Go to google and click on Images" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:src="@drawable/google_images" />

        <TextView
            style="@style/paragraph"
            android:text="2.Type in atari breakout" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="-150dp"
            android:src="@drawable/type_atari_breakout" />

        <TextView
            style="@style/paragraph"
            android:text="3.Enjoy the classic game!" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-90dp"
            android:layout_marginTop="-60dp"
            android:src="@drawable/classic_game" />

    </LinearLayout>
</ScrollView>